<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oop.laba2.donroute">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_my"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_my_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DonRoute">
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ui.RegistrationActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ui.TransportNumbersActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ui.RouteActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ui.ChooseStationActivity"
            android:exported="true" />
        <activity
            android:name=".ui.AddFavoritesErrorActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ChooseTransportTypeActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>