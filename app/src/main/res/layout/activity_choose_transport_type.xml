<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChooseTransportTypeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/openLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Войти"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toBottomOf="@+id/searchStopView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchStopView" />

        <Button
            android:id="@+id/chooseStationBTN"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_rounded_blue"
            android:elevation="1dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Выбрать автостанцию"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchStopView" />

        <androidx.cardview.widget.CardView
            android:id="@+id/busCV"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:layout_marginTop="26dp"
            app:cardBackgroundColor="@color/bus_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseStationBTN">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top|left"
                android:text="Автобусы"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="173dp"
                android:layout_height="172dp"
                android:layout_gravity="right"
                android:layout_marginRight="-45dp"
                android:cropToPadding="false"
                android:rotation="-22"
                android:src="@drawable/rectangle_rounded_blue"
                app:tint="#96C8ED" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="24dp"
                android:paddingRight="-70dp"
                android:src="@drawable/bus" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/trolleybusCV"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/trolleybus_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/busCV">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top|left"
                android:text="Троллейбусы"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="173dp"
                android:layout_height="172dp"
                android:layout_gravity="right"
                android:layout_marginRight="-45dp"
                android:cropToPadding="false"
                android:rotation="-22"
                android:src="@drawable/rectangle_rounded_blue"
                app:tint="#ADD57F" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="25dp"
                android:paddingRight="-90dp"
                android:scaleX="1.4"
                android:scaleY="1.4"
                android:src="@drawable/trolleybus" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tramCV"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/tram_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trolleybusCV">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top|left"
                android:text="Трамваи"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="173dp"
                android:layout_height="172dp"
                android:layout_gravity="right"
                android:layout_marginRight="-45dp"
                android:cropToPadding="false"
                android:rotation="-22"
                android:src="@drawable/rectangle_rounded_blue"
                app:tint="#C894C4" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:paddingRight="-72dp"
                android:paddingBottom="22dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:src="@drawable/tram"
                android:translationY="-1dp" />

        </androidx.cardview.widget.CardView>

        <SearchView
            android:id="@+id/searchStopView"
            android:layout_width="318dp"
            android:layout_height="26dp"
            android:layout_marginEnd="10dp"
            android:elevation="2dp"
            android:foregroundTint="#17E6AC"
            android:queryHint="Поиск остановки"
            app:layout_constraintEnd_toStartOf="@+id/openLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/searchListView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:drawSelectorOnTop="false"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/searchStopView"
            app:layout_constraintStart_toStartOf="@+id/searchStopView"
            app:layout_constraintTop_toBottomOf="@+id/searchStopView">

        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/favouritesFAB"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#E9E8FF"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:foreground="@drawable/ic_heart"
        android:foregroundGravity="center"
        android:foregroundTint="#1E55B5"
        android:tintMode="multiply"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>